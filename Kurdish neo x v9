local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer

-- Round helper
local function round(ui,r)
	local c = Instance.new("UICorner")
	c.CornerRadius = UDim.new(0,r or 14)
	c.Parent = ui
end

-- Toast helper
local function toast(msg)
	local gui = player:WaitForChild("PlayerGui")
	local holder = gui:FindFirstChild("NeoToasts") or Instance.new("ScreenGui", gui)
	holder.Name = "NeoToasts"
	local t = Instance.new("TextLabel", holder)
	t.Size = UDim2.fromScale(0.45,0.08)
	t.Position = UDim2.fromScale(0.275,0.05)
	t.BackgroundColor3 = Color3.fromRGB(0,140,0)
	t.Text = msg
	t.TextColor3 = Color3.new(1,1,1)
	t.Font = Enum.Font.GothamBold
	t.TextScaled = true
	round(t,14)
	t.BackgroundTransparency = 1
	TweenService:Create(t, TweenInfo.new(0.25), {BackgroundTransparency=0}):Play()
	task.delay(2, function()
		TweenService:Create(t, TweenInfo.new(0.25), {BackgroundTransparency=1}):Play()
		task.delay(0.3, function() t:Destroy() end)
	end)
end

-- Main GUI
local gui = Instance.new("ScreenGui")
gui.Name = "KurdishNeoX_v9"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local main = Instance.new("Frame", gui)
main.Size = UDim2.fromScale(0.75,0.8)
main.Position = UDim2.fromScale(0.125,0.1)
main.BackgroundColor3 = Color3.fromRGB(18,18,18)
main.Active, main.Draggable = true,true
round(main,20)

-- Title
local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1,0,0.1,0)
title.BackgroundColor3 = Color3.fromRGB(170,0,0)
title.Text = "Kurdish Neo X v9 ULTRA | by a7uliiix"
title.TextColor3 = Color3.new(1,1,1)
title.Font = Enum.Font.GothamBold
title.TextScaled = true
round(title,20)

-- Follow banner
local follow = Instance.new("TextLabel", main)
follow.Size = UDim2.new(0.8,0,0.06,0)
follow.Position = UDim2.new(0.1,0,0.12,0)
follow.BackgroundColor3 = Color3.fromRGB(0,140,0)
follow.Text = "‚≠ê Follow my Roblox account: @a7uliiix ‚≠ê"
follow.TextColor3 = Color3.new(1,1,1)
follow.Font = Enum.Font.GothamBold
follow.TextScaled = true
round(follow,14)

-- Container for buttons
local container = Instance.new("Frame", main)
container.Size = UDim2.new(0.9,0,0.7,0)
container.Position = UDim2.new(0.05,0,0.22,0)
container.BackgroundTransparency = 1

local layout = Instance.new("UIListLayout", container)
layout.Padding = UDim.new(0,10)

-- END Part 1

-- START Kurdish Neo X v9 ULTRA Part 2
-- Tools & Emotes Buttons

local function makeButton(text)
	local b = Instance.new("TextButton", container)
	b.Size = UDim2.new(1,0,0,50)
	b.BackgroundColor3 = Color3.fromRGB(0,120,0)
	b.Text = text
	b.TextColor3 = Color3.new(1,1,1)
	b.Font = Enum.Font.GothamBold
	b.TextScaled = true
	round(b,14)
	b.MouseButton1Click:Connect(function()
		toast(text .. " (Demo)")
	end)
end

