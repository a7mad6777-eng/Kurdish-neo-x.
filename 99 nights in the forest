-- Tabs
local tabNames = {"Combat","Bring Stuff","Main & Farm","Auto","Settings"}
local tabButtons = {}
local tabFrames = {}

for i,name in pairs(tabNames) do
    local btn = Instance.new("TextButton", mainFrame)
    btn.Size = UDim2.new(0, 95,0,30)
    btn.Position = UDim2.new(0, 10 + (i-1)*100, 0, 45)
    btn.Text = name
    btn.BackgroundColor3 = Color3.fromRGB(130,0,220)
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 14
    Instance.new("UICorner",btn).CornerRadius = UDim.new(0,6)
    table.insert(tabButtons, btn)

    local frame = Instance.new("Frame", mainFrame)
    frame.Size = UDim2.new(1,-20,1,-90)
    frame.Position = UDim2.new(0,10,0,80)
    frame.BackgroundTransparency = 1
    frame.Visible = false
    tabFrames[name] = frame
end

-- Default tab
tabFrames["Combat"].Visible = true

-- Tab switch logic
for i,btn in pairs(tabButtons) do
    btn.MouseButton1Click:Connect(function()
        for _,f in pairs(tabFrames) do f.Visible = false end
        tabFrames[btn.Text].Visible = true
        notify(btn.Text.." Tab Selected ‚úÖ")
    end)
end

