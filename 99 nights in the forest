-- Range Slider Template
local function createRangeSlider(parent, y, labelText, default)
    local lbl = Instance.new("TextLabel", parent)
    lbl.Position = UDim2.new(0,220,0,y)
    lbl.Size = UDim2.new(0,250,0,25)
    lbl.Text = labelText..": "..default
    lbl.TextColor3 = Color3.fromRGB(255,255,255)
    lbl.BackgroundTransparency = 1
    lbl.Font = Enum.Font.Gotham
    lbl.TextSize = 14

    local slider = Instance.new("Frame", parent)
    slider.Position = UDim2.new(0,220,0,y+30)
    slider.Size = UDim2.new(0,200,0,10)
    slider.BackgroundColor3 = Color3.fromRGB(100,0,200)
    Instance.new("UICorner", slider).CornerRadius = UDim.new(0,5)

    local knob = Instance.new("Frame", slider)
    knob.Size = UDim2.new(0,15,0,15)
    knob.Position = UDim2.new(default/50,0,-2.5,0)
    knob.BackgroundColor3 = Color3.fromRGB(255,0,255)
    Instance.new("UICorner", knob).CornerRadius = UDim.new(0,7)

    local dragging = false
    knob.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
        end
    end)
    knob.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)
    RunService.RenderStepped:Connect(function()
        if dragging then
            local mouseX = Mouse.X
            local sliderPos = math.clamp(mouseX - slider.AbsolutePosition.X,0,slider.AbsoluteSize.X)
            knob.Position = UDim2.new(sliderPos/slider.AbsoluteSize.X,0,-2.5,0)
            lbl.Text = labelText..": "..math.floor(sliderPos/slider.AbsoluteSize.X*50)
        end
    end)
    return lbl
end

local killRangeLabel = createRangeSlider(combat,160,"Kill Range",10)
local chopRangeLabel = createRangeSlider(combat,210,"Chop Range",10)
local iceRangeLabel = createRangeSlider(combat,260,"Ice Range",10)

