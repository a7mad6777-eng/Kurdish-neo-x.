local bring = tabFrames["Bring Stuff"]
local bringTarget = "Player" -- default target

local targetLabel = Instance.new("TextLabel", bring)
targetLabel.Position = UDim2.new(0,10,0,10)
targetLabel.Size = UDim2.new(0,200,0,25)
targetLabel.BackgroundTransparency = 1
targetLabel.TextColor3 = Color3.fromRGB(255,255,255)
targetLabel.Text = "Bring Target: Player"
targetLabel.Font = Enum.Font.Gotham
targetLabel.TextSize = 14

local function createTargetButton(y, target)
    local btn = Instance.new("TextButton", bring)
    btn.Position = UDim2.new(0,220,0,y)
    btn.Size = UDim2.new(0,120,0,25)
    btn.Text = target
    btn.BackgroundColor3 = Color3.fromRGB(180,0,255)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0,6)
    btn.MouseButton1Click:Connect(function()
        bringTarget = target
        targetLabel.Text = "Bring Target: "..target
        notify("Bring Target set to "..target.." ‚úÖ")
    end)
end

createTargetButton(10,"Player")
createTargetButton(40,"Campfire")
createTargetButton(70,"Workbench")

